$font-defaults: 'Helvetica Neue', Helvetica, Arial, sans-serif;
$font-family-general: 'Noto Sans', $font-defaults;
$theme-font-size: 13px;
$btn-font-weight: 300;

body, label, .checkbox label {
  font-family: $font-family-general;
  font-size: $theme-font-size;
  font-weight: $btn-font-weight;
}